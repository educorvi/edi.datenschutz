<model
    xmlns="http://namespaces.plone.org/supermodel/schema"
    xmlns:security="http://namespaces.plone.org/supermodel/security"
    xmlns:form="http://namespaces.plone.org/supermodel/form"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="edi.datenschutz">

  <schema>

      <field name="title" type="zope.schema.TextLine">
        <title>Titel des Risikomanagements</title>
        <description>Im Risikomanagement erfolgt die Erfassung von Risiken für diese Verarbeitungstätigkeit.</description>
        <defaultFactory>edi.datenschutz.content.risikomanagement.get_title</defaultFactory>
      </field>

      <field name="description" type="zope.schema.Text">
        <required>False</required>	    
        <description>Kurzbeschreibung (Anzeige in den Suchergebnissen)</description>
      </field>

  </schema>

</model>
